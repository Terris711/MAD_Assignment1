<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F6F6F6"
    android:layout_height="match_parent"
    tools:context=".InGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/undo_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/undo"></ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"></View>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.65"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">


            <ImageView
                android:id="@+id/offline_game_seting_gifview"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="7.5dp"
                android:src="@drawable/settings_gif" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_two_count"
                android:layout_width="73dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="6"
                android:textColor="#353535"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/player_two_img"
                android:layout_width="69dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="6.85"
                android:src="@drawable/profile_img"
                />

            <TextView
                android:id="@+id/player_two_name_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2.65"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Jason B."
                android:textColor="#353535"
                android:textSize="14dp"></TextView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/grid_fragment"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="4"
            android:weightSum="10">

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_one_count"
                android:layout_width="73dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="6"
                android:textColor="#353535"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/player_one_img"
                android:layout_width="69dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="6.85"
                android:src="@drawable/profile_img"

                />

            <TextView
                android:id="@+id/player_one_name_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2.65"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Jason B."
                android:textColor="#353535"
                android:textSize="14dp"></TextView>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Available: "/>
        <TextView
            android:id="@+id/available_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P1 win count: "/>
            <TextView
                android:id="@+id/p1_win_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P2 win count: "/>
            <TextView
                android:id="@+id/p2_win_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draw: "/>
            <TextView
                android:id="@+id/draw_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>